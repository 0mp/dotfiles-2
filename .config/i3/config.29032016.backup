# reload the configuration file
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+greater exec i3-msg exit
# shutdown
bindsym $mod+Shift+escape exec sudo shutdown -h now

# disable auto focus via mouse - needed for resize mode
focus_follows_mouse no

# resize window (you can also use the mouse for that)
mode "resize" {
		# These bindings trigger as soon as you enter the resize mode

		# Pressing left will shrink the window’s width.
		# Pressing right will grow the window’s width.
		# Pressing up will shrink the window’s height.
		# Pressing down will grow the window’s height.
		bindsym h resize shrink width 5 px or 5 ppt
		bindsym t resize grow height 5 px or 5 ppt
		bindsym n resize shrink height 5 px or 5 ppt
		bindsym s resize grow width 5 px or 5 ppt

		# same bindings, but for the arrow keys
		bindsym Left resize shrink width 5 px or 5 ppt
		bindsym Down resize grow height 5 px or 5 ppt
		bindsym Up resize shrink height 5 px or 5 ppt
		bindsym Right resize grow width 5 px or 5 ppt

		# back to normal: Enter or Escape
		bindsym Return mode "default" ; exec echo "" > $filemode ; exec pkill -f resize_window_mouse.py
		bindsym Escape mode "default" ; exec echo "" > $filemode ; exec pkill -f resize_window_mouse.py
	bindsym $mod+r mode "default" ; exec echo "" > $filemode ; exec pkill -f resize_window_mouse.py

	bindsym $mod+m focus floating; mode "move" ; exec echo move > $filemode ; exec pkill -f resize_window_mouse.py ; exec .bin/move_window_mouse.py
}

bindsym $mod+r mode "resize" ; exec echo resize > $filemode ; exec .bin/resize_window_mouse.py
# ; exec python script which execs i3-msgs to resize the windows by position changes of the mouse 

mode "move" {

	bindsym Up move up 20px
	bindsym Left move left 20px
	bindsym Down move down 20px
	bindsym Right move right 20px

	# back to normal: Enter or Escape
	bindsym Return mode "default" ; exec echo "" > $filemode ; exec pkill -f .bin/move_window_mouse.py
	bindsym Escape mode "default" ; exec echo "" > $filemode ; exec pkill -f .bin/move_window_mouse.py
	bindsym $mod+m mode "default" ; exec echo "" > $filemode ; exec pkill -f .bin/move_window_mouse.py

	bindsym $mod+r mode "resize" ; exec echo resize > $filemode ; exec pkill -f .bin/move_window_mouse.py ; exec .bin/resize_window_mouse.py
}
bindsym $mod+m focus floating; floating enable; mode "move" ; exec echo move > $filemode ; exec .bin/move_window_mouse.py
# ; exec python script which execs i3-msgs to move the windows by position changes of the mouse 



