bar {
    id bar-1
    position top
    status_command i3blocks
    i3bar_command i3bar -t
    #font pango:Ubuntu Mono, FontAwesome 11
    font pango:Ubuntu Mono derivative Powerline, FontAwesome 10
    separator_symbol "|"
    tray_output eDP1
    tray_padding 0
    #height 28
    height 20 #windoof taskbar height = 40px - 20px=titlebar height i3 !!!!! title bar height changes with the font family/text size
    #strip_workspace_numbers yes

    colors {
        statusline         $txtbar #$black #$white
        background         $transparent
        separator          $darkwhite

        #                  BORDER       BACKGROUND   TEXT
        focused_workspace  $transparent $transparent $red
        inactive_workspace $transparent $transparent $txtbar
        active_workspace   $transparent $transparent $txtbar
        urgent_workspace   $darkblack   $darkblack   $red
        binding_mode       $transparent $transparent $yellow
    }
}
















